<?xml version="1.0" encoding="utf-8"?>
<keymap name="pilot">
    <device type="keyboard">
        <button value="w">
            <action value="thrust-forward"/>
        </button>
        <button value="a">
            <action value="thrust-left"/>
        </button>
        <button value="s">
            <action value="thrust-reverse"/>
        </button>
        <button value="d">
            <action value="thrust-right"/>
        </button>
        <button value="q">
            <action value="thrust-down"/>
        </button>
        <button value="e">
            <action value="thrust-up"/>
        </button>
    </device>
    <device type="joystick">
        <axis value="x">
            <action value="yaw"/>
        </axis>
        <axis value="y">
            <action value="pitch"/>
        </axis>
        <button value="1">
            <action value="fire-primary"/>
        </button>
        <button value="4">
            <action value="roll-left"/>
        </button>
        <button value="5">
            <action value="roll-right"/>
        </button>
    </device>
    <device type="joystick">
        <axis value="x">
            <action value="thrust-leftright"/>
        </axis>
        <axis value="y">
            <action value="thrust-forwardreverse"/>
        </axis>
        <button value="2">
            <action value="thrust-down"/>
        </button>
        <button value="3">
            <action value="thrust-up"/>
        </button>
    </device>
</keymap>
